<h1><%= t('users.title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('users.name') %></th>
      <th><%= t('users.email') %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to t('nav.show'), user_path(id: user.id) %></td>
        <td><%= link_to t('nav.edit'), edit_user_path(id: user.id) %></td>
        <td><%= link_to t('alert.destroy'), user_path(id: user.id), method: :delete, data: { confirm: t('alert.are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('users.new'), new_user_path %>
