<h1><%= t('products.title') %></h1>

<%= render 'filter' %>

<table>
  <thead>
    <tr>
      <th><%= t('products.name') %></th>
      <th><%= t('products.description') %></th>
      <th><%= t('products.date_add') %></th>
      <th><%= t('products.manufacturer') %></th>
      <th><%= t('products.units') %></th>
      <th><%= t('products.category') %></th>
      <th><%= t('products.price') %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.added_at %></td>
        <td><%= product.manufacturer %></td>
        <td><%= product.units %></td>
        <td><%= product.category %></td>
        <td><%= product.price %></td>
        <td><%= link_to t('nav.show'), product_path(id: product.id) %></td>
        <td><%= link_to t('nav.edit'), edit_product_path(id: product.id) %></td>
        <td><%= link_to t('alert.destroy'), product_path(id: product.id), method: :delete, data: { confirm: t('alert.are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('products.new'), new_product_path %>
